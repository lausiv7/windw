{
  "name": "windwalker-test-auto-repair",
  "version": "1.0.0",
  "description": "WindWalker VS Code Extension Auto Test & Repair Loop",
  "main": "index.js",
  "scripts": {
    "test:headless": "PLAYWRIGHT_BROWSERS_PATH=./browsers npx playwright test --headed=false",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:repair": "node auto-repair-loop.js",
    "install-deps": "npm install && npx playwright install chromium"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "fs-extra": "^11.1.1",
    "ws": "^8.18.3"
  }
}
