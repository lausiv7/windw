{
  "name": "windwalker",
  "displayName": "WindWalker IDE",
  "description": "AI-powered web development environment",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "contributes": {
    "commands": [
      {
        "command": "windwalker.helloWorld",
        "title": "WindWalker: Hello World"
      },
      {
        "command": "windwalker.runTests",
        "title": "WindWalker: Run Tests"
      },
      {
        "command": "windwalker.runSmokeTests",
        "title": "WindWalker: Run Smoke Tests"
      },
      {
        "command": "windwalker.showStatus",
        "title": "WindWalker: Show Status"
      },
      {
        "command": "windwalker.gitStatus",
        "title": "WindWalker: Git Status"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "windwalker-full",
          "title": "WindWalker Full",
          "icon": "$(gear)"
        }
      ]
    },
    "views": {
      "windwalker-full": [
        {
          "type": "webview",
          "id": "windwalker.fullChatView",
          "name": "AI Chat (Full)",
          "when": "true"
        },
        {
          "type": "webview", 
          "id": "windwalker.fullPreviewView",
          "name": "Preview (Full)",
          "when": "true"
        }
      ]
    },
    "configuration": {
      "title": "WindWalker",
      "properties": {
        "windwalker.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Google Gemini API key for AI functionality",
          "markdownDescription": "Your Google Gemini API key. Get it from [Google AI Studio](https://makersuite.google.com/app/apikey)"
        }
      }
    }
  },
  "dependencies": {
    "@google/generative-ai": "^0.2.1",
    "simple-git": "^3.19.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "typescript": "^5.3.3"
  }
}
